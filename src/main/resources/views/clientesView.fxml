<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClientesViewController">
   <children>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Clientes">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Button mnemonicParsing="false" onAction="#updateClientes" text="Actualizar" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <TableView fx:id="tablaClientes" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="columnaId" prefWidth="100" text="Id" />
            <TableColumn fx:id="columnaNombre" prefWidth="150" text="Nombre" />
            <TableColumn fx:id="columnaDetalle" prefWidth="200" text="Detalle" />            
         </columns>
      </TableView>
   </children>
</VBox>
